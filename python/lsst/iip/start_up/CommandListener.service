[Unit]
Description=L1 CommandListener Service
Requires=ctrl_dependency.target
After=DMCS.service
BindsTo=ctrl_iip.target

[Service]
Type=simple
User=AT
WorkingDirectory=/home/AT/src/git/ctrl_iip/python/lsst/iip
ExecStart=/usr/bin/bash ./scripts/services/run_CommandListener.sh
ExecStop=/usr/bin/bash ./scripts/at_rmq_purge_queues.sh
Restart=always

[Install]
WantedBy=ctrl_iip.target
