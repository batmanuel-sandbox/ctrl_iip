CC      = g++
INC     = -I./
LDFLAGS = -L/usr/local/lib
LDLIBS  = -lSimpleAmqpClient
CFLAGS  = -g -Wall -c

all: Consumer SimplePublisher 
Consumer: Consumer.cpp
	$(CC) -std=c++11 $(INC) $(LDFLAGS) $(CFLAGS) $(LDLIBS) -o Consumer.o Consumer.cpp

SimplePublisher: SimplePublisher.cpp
	$(CC) -std=c++11 $(INC) $(LDFLAGS) $(CFLAGS) $(LDLIBS) -o SimplePublisher.o SimplePublisher.cpp

clean: 
	rm -i SimplePublisher.o Consumer.o    
